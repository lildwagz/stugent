<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".views.data_pelajaran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah data mata pelajaran"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/edt_kode_mapel"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edt_style"
            android:hint="Kode Mapel"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/edt_nama_mapel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_style"
            android:hint="Nama Mapel"
            android:paddingLeft="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_style">

            <Spinner
                android:id="@+id/spinnerKodeGuru"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/goBack"
                android:onClick="kembali"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edt_style_2"
                android:src="@drawable/back"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="4dp"
                android:layout_weight="4"/>

            <Button
                android:id="@+id/goAdd"
                android:onClick="tambah_mapel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/edt_style_2"
                android:text="Add"
                android:textColor="#fff"
                android:textSize="22dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>